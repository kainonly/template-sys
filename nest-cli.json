{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "builder": "swc",
    "deleteOutDir": true,
    "webpack": true
  },
  "projects": {
    "utils": {
      "type": "library",
      "root": "utils",
      "entryFile": "index",
      "sourceRoot": "utils/src",
      "compilerOptions": {
        "tsConfigPath": "utils/tsconfig.lib.json"
      }
    }
  }
}